# Database Configuration for Development (Docker)
DATABASE_URL="postgresql://USER:PASS@HOST:5432/DBNAME?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"


# DeepL API Key for translation service
# Obtain your API key from https://www.deepl.com/pro-account/ (required for DeepL integration)
DEEPL_API_KEY=""

# Environment
NODE_ENV="production"
PORT=3000
HOSTNAME=0.0.0.0

# Docker PostgreSQL Configuration
POSTGRES_DB="avrentals_db"
POSTGRES_USER="avrentals_user"
POSTGRES_PASSWORD="avrentals_pass"

# Nginx/SSL (Docker Compose) configuration
DOMAIN="your.domain.tld"
DUCKDNS_DOMAIN="optional"
DUCKDNS_TOKEN="optional"
